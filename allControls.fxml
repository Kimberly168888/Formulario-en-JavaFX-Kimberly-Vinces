<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="javafxcontrols.AllControlsController" spacing="10" alignment="TOP_LEFT">
    <children>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Button:"/>
                <Button text="Button" fx:id="button"/>
            </children>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="CheckBox:"/>
                <CheckBox text="CheckBox" fx:id="checkBox"/>
            </children>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Hyperlink:"/>
                <Hyperlink text="Hyperlink" fx:id="hyperlink"/>
            </children>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="ToggleButton:"/>
                <ToggleButton text="ToggleButton" fx:id="toggleButton"/>
            </children>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="RadioButton:"/>
                <RadioButton text="RadioButton" fx:id="radioButton"/>
            </children>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Label:"/>
                <Label text="Label" fx:id="label"/>
            </children>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="TextField:"/>
                <TextField text="some text..." fx:id="textField"/>
            </children>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="PasswordField:"/>
                <PasswordField text="password" fx:id="passwordField"/>
            </children>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="TextArea:"/>
                <TextArea text="This is very long text that will wrap to several lines." wrapText="true" fx:id="textArea"/>
            </children>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="ProgressIndicator:"/>
                <ProgressIndicator progress="0.49" fx:id="progressIndicator"/>
                <Label text="49%" fx:id="progressLabel"/>
            </children>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="ProgressBar:"/>
                <ProgressBar progress="0.49" fx:id="progressBar"/>
            </children>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Slider:"/>
                <Slider value="50" fx:id="slider"/>
            </children>
        </HBox>
    </children>
</VBox>
